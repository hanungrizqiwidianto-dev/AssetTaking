@using Microsoft.AspNetCore.Http
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <title>Login | Asset Taking</title>

    <!-- Favicons -->
    @* <link rel="shortcut icon" href="~/assets/media/favicons/favicon.png"> *@

    <!-- Stylesheets -->
    <link rel="stylesheet" href="~/assets/js/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/assets/js/plugins/sweetalert2/sweetalert2.min.css">
    <link rel="stylesheet" id="css-main" href="~/assets/css/codebase.min.css">
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- jQuery -->
    <script src="~/assets/js/lib/jquery.min.js"></script>
</head>
<body>
    <div id="overlay">
        <div class="cv-spinner">
            <span class="spinner"></span>
        </div>
    </div>

    <!-- Hidden session values -->
    <input type="hidden" id="web_link" value="@Context.Session.GetString("Web_Link")" />
    <input type="hidden" id="hd_nrp" value="@Context.Session.GetString("Nrp")" />
    <input type="hidden" id="hd_role" value="@Context.Session.GetInt32("ID_Role")" />
    <input type="hidden" id="hd_name" value="@Context.Session.GetString("Name")" />
    <input type="hidden" id="hd_site" value="@Context.Session.GetString("Site")" />
    <input type="hidden" id="hd_position" value="@Context.Session.GetString("PositionID")" />

    <div id="page-container" class="main-content-boxed">
        <main id="main-container">
            <div class="bg-white">
                <div class="hero-static content content-full bg-body-extra-light">
                    <!-- Header -->
                    <div class="py-4 px-1 text-center mb-4">
                        <a class="link-fx fw-bold" href="#">
                            <i class="fa fa-fire"></i>
                            <span class="fs-4">Asset Taking</span>
                        </a>
                        <h2 class="h5 fw-medium text-muted mb-0">Please sign in</h2>
                    </div>

                    <!-- Login Form -->
                    <div class="row justify-content-center px-1">
                        <div class="col-sm-8 col-md-6 col-xl-4">
                            <form>
                                <div class="form-floating mb-4">
                                    <input type="text" class="form-control form-control-sm" id="login-username" placeholder="Enter your username">
                                    <label for="login-username">Username</label>
                                </div>
                                <div class="form-floating mb-4">
                                    <input type="password" class="form-control form-control-sm" id="login-password" placeholder="Enter your password">
                                    <label for="login-password">Password</label>
                                </div>
                                <hr />
                                <div class="form-group mb-4">
                                    <label for="jobSite">Role</label>
                                    <select class="js-select2 form-select" id="jobSite" style="width: 100%;">
                                        <option>Loading...</option>
                                    </select>
                                </div>
                                <div class="row g-sm mb-4">
                                    <div class="col-12 mb-2">
                                        <button type="button" onclick="PostLogin()" class="btn btn-lg btn-alt-primary w-100 py-3 fw-semibold">
                                            Sign In
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <!-- END Login Form -->
                </div>
            </div>
        </main>
    </div>

    <!-- Core JS -->
    <script src="~/assets/js/codebase.app.min.js"></script>
    <script src="~/assets/js/plugins/sweetalert2/sweetalert2.min.js"></script>
    <script src="~/assets/js/plugins/select2/js/select2.full.min.js"></script>
    <script>
        Codebase.helpersOnLoad(['jq-select2']);
    </script>
    <script src="~/js/login.js"></script>
</body>
</html>
