@{
    ViewData["Title"] = "Asset Out";
}

<h2 class="content-heading">Asset Out</h2>

<!-- Navigation Tabs -->
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <small>Input Asset Out</small>
        </h3>
        <div class="block-options">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <button class="nav-link active" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual" type="button" role="tab">
                        <i class="fa fa-edit me-1"></i>Manual Input
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="scan-tab" data-bs-toggle="tab" data-bs-target="#scan" type="button" role="tab">
                        <i class="fa fa-qrcode me-1"></i>Scan QR/Barcode
                    </button>
                </li>
                <li class="nav-item">
                    <button class="nav-link" id="excel-tab" data-bs-toggle="tab" data-bs-target="#excel" type="button" role="tab">
                        <i class="fa fa-file-excel me-1"></i>Import Excel
                    </button>
                </li>
            </ul>
        </div>
    </div>
    <div class="block-content block-content-full">
        <div class="tab-content">
            <!-- Manual Input Tab -->
            <div class="tab-pane fade show active" id="manual" role="tabpanel">
                <form id="assetOutForm" enctype="multipart/form-data">
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="assetSelect">Pilih Asset</label>
                        <select id="assetSelect" class="form-control" name="assetSelect" required>
                            <option value="">Pilih Asset...</option>
                        </select>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="qty">Quantity</label>
                        <input type="number" id="qty" class="form-control" name="qty" min="1" required disabled>
                        <small class="form-text text-muted">Stok tersedia: <span id="stockInfo">-</span></small>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="nomorAsset">Nomor Asset</label>
                        <input type="text" id="nomorAsset" class="form-control" name="nomorAsset" readonly disabled>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="namaBarang">Nama Barang</label>
                        <input type="text" id="namaBarang" class="form-control" name="namaBarang" readonly disabled>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="kodeBarang">Kode Barang</label>
                        <input type="text" id="kodeBarang" class="form-control" name="kodeBarang" readonly disabled>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="kategoriBarang">Kategori Barang</label>
                        <input type="text" id="kategoriBarang" class="form-control" name="kategoriBarang" readonly disabled>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="state">State/Kondisi</label>
                        <select class="form-control" id="state" name="state">
                            <option value="">Pilih State...</option>
                            <!-- Options akan diload dari API -->
                        </select>
                        <div class="form-text text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            Kondisi asset saat keluar
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="dstrctOut">District Out</label>
                        <select class="form-control" id="dstrctOut" name="dstrctOut">
                            <option value="">Pilih District...</option>
                            <!-- Options akan diload dari API -->
                        </select>
                        <div class="form-text text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            Lokasi district tujuan
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-12">
                    <div class="mb-4">
                        <label class="form-label" for="serialNumberSelect">Serial Numbers</label>
                        <select id="serialNumberSelect" class="form-control" name="serialNumberSelect" multiple="multiple" disabled>
                            <option value="">Pilih asset terlebih dahulu...</option>
                        </select>
                        <div class="form-text text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            Pilih serial numbers yang akan di-checkout (dapat memilih multiple)
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="fotoFile">Upload Foto Baru (Opsional)</label>
                        <input type="file" class="form-control" id="fotoFile" name="fotoFile" accept="image/*">
                        <div class="form-text text-muted">
                            <i class="fa fa-info-circle me-1"></i>
                            Format yang didukung: JPG, JPEG, PNG, GIF (Max: 5MB)
                        </div>
                        <div id="imagePreview" class="mt-2" style="display:none;">
                            <img id="previewImg" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-4">
                        <label class="form-label" for="foto">Foto Saat Ini</label>
                        <input type="text" class="form-control" id="foto" name="foto" readonly disabled>
                        <div id="currentImagePreview" class="mt-2" style="display:none;">
                            <img id="currentImg" src="" alt="Current Photo" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px;">
                        </div>
                    </div>
                </div>
            </div>

                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary" id="submitBtn" disabled>
                            <i class="fa fa-save"></i> Submit Asset Out
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fa fa-refresh"></i> Reset
                        </button>
                    </div>
                </form>
            </div>

            <!-- Scan QR/Barcode Tab -->
            <div class="tab-pane fade" id="scan" role="tabpanel">
                <div class="row">
                    <!-- Scanner Section -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-camera me-1"></i> Scanner
                                </h5>
                            </div>
                            <div class="card-body">
                                <div id="qr-scanner-section-out">
                                    <div id="qr-reader-out" style="width: 100%; max-width: 400px; margin: 0 auto; display: none;"></div>
                                    
                                    <!-- Scanner Controls -->
                                    <div class="text-center">
                                        <div id="scanner-status-out" class="mb-3">
                                            <i class="fa fa-qrcode fa-3x text-muted mb-2 d-block"></i>
                                            <h6 class="text-muted">Klik tombol di bawah untuk memulai scan</h6>
                                        </div>
                                        
                                        <button type="button" class="btn btn-success me-2" id="startScanBtnOut">
                                            <i class="fa fa-camera me-1"></i> Mulai Scan
                                        </button>
                                        <button type="button" class="btn btn-danger" id="stopScanBtnOut" style="display:none;">
                                            <i class="fa fa-stop me-1"></i> Stop
                                        </button>
                                    </div>
                                    
                                    <!-- Scan Result Alert -->
                                    <div id="scan-result-out" class="alert alert-success mt-3" style="display:none;">
                                        <i class="fa fa-check-circle me-1"></i>
                                        <strong>Scan berhasil!</strong> Data telah diisi otomatis.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Scanned Data Form -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-edit me-1"></i> Asset Out Data
                                </h5>
                            </div>
                            <div class="card-body">
                                <form id="scannedAssetOutForm" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_nomorAsset">Nomor Asset</label>
                                        <input type="text" class="form-control" id="scan_out_nomorAsset" name="nomorAsset" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_namaBarang">Nama Barang</label>
                                        <input type="text" class="form-control" id="scan_out_namaBarang" name="namaBarang" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_qty">Quantity Out <span class="text-danger">*</span></label>
                                        <input type="number" class="form-control" id="scan_out_qty" name="qty" min="1" max="1" value="1" required>
                                        <div class="form-text text-muted">
                                            <i class="fa fa-info-circle me-1"></i>
                                            Maksimal quantity: <span id="scan_out_maxQty">1</span>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_state">State</label>
                                        <select class="form-control" id="scan_out_state" name="state">
                                            <option value="">Pilih State...</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_dstrctOut">District Out</label>
                                        <select class="form-control" id="scan_out_dstrctOut" name="dstrctOut">
                                            <option value="">Pilih District...</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label">Serial Numbers <span class="text-danger">*</span></label>
                                        <select id="scan_serialNumberSelect" class="form-control" name="serialNumberSelect" multiple="multiple" disabled>
                                            <option value="">Scan asset terlebih dahulu...</option>
                                        </select>
                                        <div class="form-text text-muted">
                                            <i class="fa fa-info-circle me-1"></i>Pilih serial numbers yang akan di-checkout
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_out_fotoFile">Upload Foto (Optional)</label>
                                        <input type="file" class="form-control" id="scan_out_fotoFile" name="fotoFile" accept="image/*">
                                        <div class="form-text text-muted">
                                            Format: JPG, JPEG, PNG, GIF. Maksimal 5MB.
                                        </div>
                                    </div>
                                    
                                    <!-- Submit Button -->
                                    <div class="text-end">
                                        <button type="submit" class="btn btn-primary me-2" id="scan_submitBtn" disabled>
                                            <i class="fa fa-save"></i> Submit Asset Out
                                        </button>
                                        <button type="reset" class="btn btn-secondary">
                                            <i class="fa fa-refresh"></i> Reset
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Excel Import Tab -->
            <div class="tab-pane fade" id="excel" role="tabpanel">
                <div class="alert alert-info">
                    <i class="fa fa-info-circle me-2"></i>
                    <strong>Petunjuk Import Excel:</strong>
                    <ul class="mb-0 mt-2">
                        <li>Download template Excel terlebih dahulu</li>
                        <li>Isi data sesuai format template</li>
                        <li>Pastikan Nomor Asset dan Kode Barang sesuai dengan data yang ada di sistem</li>
                        <li>Qty yang diinput akan mengurangi stok yang tersedia</li>
                        <li>Pastikan stok tersedia mencukupi untuk quantity yang diinput</li>
                    </ul>
                </div>

                <div class="row">
                    <div class="col-lg-6">
                        <div class="mb-4">
                            <label class="form-label">Download Template Excel</label>
                            <div>
                                <a href="@Url.Action("DownloadTemplateAssetOut", "Asset")" class="btn btn-success">
                                    <i class="fa fa-download me-1"></i> Download Template Asset Out
                                </a>
                            </div>
                            <small class="form-text text-muted">Download template untuk format import Excel</small>
                        </div>
                    </div>
                </div>

                <form id="excelUploadForm" enctype="multipart/form-data" action="@Url.Action("UploadExcelAssetOut", "Asset")" method="post">
                    <div class="row">
                        <div class="col-lg-8">
                            <div class="mb-4">
                                <label class="form-label" for="excelFile">Pilih File Excel</label>
                                <input type="file" class="form-control" id="excelFile" name="file" accept=".xlsx,.xls" required>
                                <div class="form-text text-muted">
                                    Format file yang didukung: .xlsx, .xls (Maksimal ukuran file: 10MB)
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4">
                            <div class="mb-4">
                                <label class="form-label">&nbsp;</label>
                                <div>
                                    <button type="submit" class="btn btn-primary" id="uploadExcelBtn">
                                        <i class="fa fa-upload me-1"></i> Upload Excel
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Progress Bar -->
                    <div id="uploadProgress" class="mb-4" style="display: none;">
                        <div class="progress">
                            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" style="width: 100%">
                                Memproses file Excel...
                            </div>
                        </div>
                    </div>

                    <!-- Upload Results -->
                    <div id="uploadResults" class="mb-4" style="display: none;">
                        <div class="alert" id="uploadResultAlert">
                            <div id="uploadResultMessage"></div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Select2 CSS and JS -->
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    
    <!-- Select2 Bootstrap 5 Theme -->
    <link href="https://cdn.jsdelivr.net/npm/select2-bootstrap-5-theme@1.3.0/dist/select2-bootstrap-5-theme.min.css" rel="stylesheet" />
    
    <style>
        .select2-result-asset {
            padding: 6px;
        }
        
        .select2-result-asset__title {
            font-weight: bold;
            color: #495057;
        }
        
        .select2-result-asset__description {
            font-size: 0.875rem;
            color: #6c757d;
            margin-top: 2px;
        }
        
        .select2-container--bootstrap-5 .select2-selection {
            min-height: calc(1.5em + 0.75rem + 2px);
        }

        /* Serial Number Select2 Styling */
        .select2-container--bootstrap-5 .select2-selection--multiple {
            min-height: calc(1.5em + 0.75rem + 2px);
        }
        
        .select2-container--bootstrap-5 .select2-selection--multiple .select2-selection__choice {
            background-color: #007bff;
            border-color: #007bff;
            color: #fff;
        }
    </style>
    
    <script src="~/js/AssetOut.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
}
