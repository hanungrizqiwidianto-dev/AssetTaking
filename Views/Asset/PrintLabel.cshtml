@{
    ViewData["Title"] = "Print Label";
    Layout = null; // Tidak menggunakan layout untuk print
    
    bool isBatch = ViewBag.IsBatch == true;
    var batchData = ViewBag.BatchData as List<Dictionary<string, object>>;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Print Label - @ViewBag.NamaBarang</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            background: white;
        }
        
        .label-container {
            width: 450px;
            margin: 0 auto 20px auto;
            border: 2px solid #333;
            padding: 0;
            page-break-inside: avoid;
            background: white;
        }
        
        .label-container.batch {
            margin-bottom: 30px;
            page-break-after: always;
        }
        
        .label-container.batch:last-child {
            page-break-after: avoid;
        }
        
        .label-header {
            background: #f8f9fa;
            border-bottom: 2px solid #333;
            padding: 12px 15px;
            text-align: center;
        }
        
        .company-name {
            font-size: 16px;
            font-weight: bold;
            color: #333;
            margin: 0;
        }
        
        .label-title {
            font-size: 12px;
            color: #666;
            margin: 2px 0 0 0;
        }
        
        .label-body {
            display: flex;
            padding: 15px;
            align-items: center;
            gap: 15px;
        }
        
        .qr-section {
            flex-shrink: 0;
            text-align: center;
        }
        
        .qr-code {
            width: 120px;
            height: 120px;
            border: 1px solid #ddd;
        }
        
        .asset-info {
            flex: 1;
            text-align: left;
        }
        
        .info-row {
            margin-bottom: 6px;
            font-size: 11px;
            line-height: 1.3;
        }
        
        .info-label {
            font-weight: bold;
            color: #333;
            display: inline-block;
            min-width: 85px;
        }
        
        .info-value {
            color: #555;
            word-wrap: break-word;
        }
        
        .label-footer {
            background: #f8f9fa;
            border-top: 1px solid #ddd;
            padding: 8px 15px;
            font-size: 9px;
            color: #666;
            text-align: center;
        }
        
        .batch-info {
            background: #e7f3ff;
            border-top: 1px solid #b3d9ff;
            padding: 5px 15px;
            font-size: 10px;
            color: #0066cc;
            text-align: center;
            font-weight: bold;
        }
        
        .print-button {
            position: fixed;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        
        .print-button:hover {
            background: #0056b3;
        }
        
        .close-button {
            position: fixed;
            top: 20px;
            left: 20px;
            padding: 10px 20px;
            background: #6c757d;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 14px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.2);
        }
        
        .close-button:hover {
            background: #545b62;
        }
        
        /* Print styles */
        @@media print {
            body {
                padding: 0;
                margin: 0;
            }
            
            .print-button,
            .close-button {
                display: none;
            }
            
            .label-container {
                border: 2px solid #333;
                margin: 0 0 20px 0;
                width: auto;
                max-width: 400px;
            }
            
            @@page {
                size: A4;
                margin: 1cm;
            }
        }
    </style>
</head>
<body>
    <button class="close-button" onclick="window.close()">
        ‚úï Tutup
    </button>
    
    <button class="print-button" onclick="window.print()">
        üñ®Ô∏è Print @(isBatch && batchData != null ? $"({batchData.Count} Labels)" : "")
    </button>

    @if (isBatch && batchData != null)
    {
        @for (int i = 0; i < batchData.Count; i++)
        {
            var item = batchData[i];
            var qrDataJson = System.Text.Json.JsonSerializer.Serialize(item);
            
            <div class="label-container batch">
                <div class="label-header">
                    <div class="company-name">ASSET MANAGEMENT</div>
                    <div class="label-title">Asset Tracking Label</div>
                </div>
                
                <div class="batch-info">
                    Batch @(i + 1) of @batchData.Count
                </div>
                
                <div class="label-body">
                    <div class="qr-section">
                        <img class="qr-code" src="https://api.qrserver.com/v1/create-qr-code/?size=120x120&data=@(System.Web.HttpUtility.UrlEncode(qrDataJson))" alt="QR Code @(i + 1)" />
                    </div>
                    
                    <div class="asset-info">
                        <div class="info-row">
                            <span class="info-label">Nama Barang:</span>
                            <span class="info-value">@(item.ContainsKey("namaBarang") ? item["namaBarang"]?.ToString() : "-")</span>
                        </div>
                        
                        @if (item.ContainsKey("nomorAsset") && !string.IsNullOrEmpty(item["nomorAsset"]?.ToString()))
                        {
                            <div class="info-row">
                                <span class="info-label">Nomor Asset:</span>
                                <span class="info-value">@item["nomorAsset"]</span>
                            </div>
                        }
                        
                        @if (item.ContainsKey("kategoriBarang") && !string.IsNullOrEmpty(item["kategoriBarang"]?.ToString()))
                        {
                            <div class="info-row">
                                <span class="info-label">Kategori:</span>
                                <span class="info-value">@item["kategoriBarang"]</span>
                            </div>
                        }
                        
                        @if (item.ContainsKey("kodeBarang") && !string.IsNullOrEmpty(item["kodeBarang"]?.ToString()))
                        {
                            <div class="info-row">
                                <span class="info-label">Kode Barang:</span>
                                <span class="info-value">@item["kodeBarang"]</span>
                            </div>
                        }
                        
                        <div class="info-row">
                            <span class="info-label">Quantity:</span>
                            <span class="info-value">@(item.ContainsKey("qty") ? item["qty"]?.ToString() : "1")</span>
                        </div>
                    </div>
                </div>
                
                <div class="label-footer">
                    Generated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm") | Scan QR code untuk detail asset
                </div>
            </div>
        }
    }
    else
    {
        <!-- Single Label -->
        <div class="label-container">
            <div class="label-header">
                <div class="company-name">ASSET MANAGEMENT</div>
                <div class="label-title">Asset Tracking Label</div>
            </div>
            
            <div class="label-body">
                <div class="qr-section">
                    <img class="qr-code" id="qr-image" src="https://api.qrserver.com/v1/create-qr-code/?size=120x120&data=@(System.Web.HttpUtility.UrlEncode(ViewBag.QRData?.ToString() ?? ""))" alt="QR Code" />
                </div>
                
                <div class="asset-info">
                    <div class="info-row">
                        <span class="info-label">Nama Barang:</span>
                        <span class="info-value">@(ViewBag.NamaBarang ?? "-")</span>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(ViewBag.NomorAsset))
                    {
                        <div class="info-row">
                            <span class="info-label">Nomor Asset:</span>
                            <span class="info-value">@ViewBag.NomorAsset</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.KategoriBarang))
                    {
                        <div class="info-row">
                            <span class="info-label">Kategori:</span>
                            <span class="info-value">@ViewBag.KategoriBarang</span>
                        </div>
                    }
                    
                    @if (!string.IsNullOrEmpty(ViewBag.KodeBarang))
                    {
                        <div class="info-row">
                            <span class="info-label">Kode Barang:</span>
                            <span class="info-value">@ViewBag.KodeBarang</span>
                        </div>
                    }
                    
                    @if (ViewBag.Qty != null)
                    {
                        <div class="info-row">
                            <span class="info-label">Quantity:</span>
                            <span class="info-value">@ViewBag.Qty</span>
                        </div>
                    }
                </div>
            </div>
            
            <div class="label-footer">
                Generated: @DateTime.Now.ToString("dd/MM/yyyy HH:mm") | Scan QR code untuk detail asset
            </div>
        </div>
    }

    <script>
        // Auto print when page loads (optional)
        // window.onload = function() {
        //     setTimeout(function() {
        //         window.print();
        //     }, 1000);
        // };
    </script>
</body>
</html>