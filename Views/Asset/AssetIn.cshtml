@{
    ViewData["Title"] = "Asset In";
}

<h2 class="content-heading">Asset In</h2>

<!-- Alert Messages -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fa fa-check-circle me-1"></i>
        @Html.Raw(TempData["Success"].ToString().Replace("\n", "<br>"))
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="fa fa-exclamation-triangle me-1"></i>
        @Html.Raw(TempData["Warning"].ToString().Replace("\n", "<br>"))
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fa fa-times-circle me-1"></i>
        @Html.Raw(TempData["Error"].ToString().Replace("\n", "<br>"))
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Tab Navigation -->
<div class="block block-rounded">
    <div class="block-header block-header-default">
        <h3 class="block-title">
            <small>Input Asset In</small>
        </h3>
        <div class="block-options">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="manual-tab" data-bs-toggle="tab" data-bs-target="#manual-input" type="button" role="tab">
                        <i class="fa fa-edit me-1"></i> Manual Input
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="scan-tab" data-bs-toggle="tab" data-bs-target="#scan-input" type="button" role="tab">
                        <i class="fa fa-qrcode me-1"></i> Scan QR/Barcode
                    </button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="excel-tab" data-bs-toggle="tab" data-bs-target="#excel-input" type="button" role="tab">
                        <i class="fa fa-file-excel me-1"></i> Import Excel
                    </button>
                </li>
            </ul>
        </div>
    </div>
    <div class="block-content block-content-full">
        <div class="tab-content">
            <!-- Manual Input Tab -->
            <div class="tab-pane fade show active" id="manual-input" role="tabpanel">
                <form id="assetInForm" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="namaBarang">Nama Barang</label>
                                <input type="text" class="form-control" id="namaBarang" name="namaBarang" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="nomorAsset">Nomor Asset</label>
                                <input type="text" class="form-control" id="nomorAsset" name="nomorAsset" required>
                                <div class="invalid-feedback">
                                    Nomor Asset sudah terdaftar di database
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="kodeBarang">Kode Barang</label>
                                <input type="text" class="form-control" id="kodeBarang" name="kodeBarang" required>
                                <div class="invalid-feedback">
                                    Kode Barang sudah terdaftar di database
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="kategoriBarang">Kategori Barang</label>
                                <select class="form-control" id="kategoriBarang" name="kategoriBarang" required>
                                    <option value="">Pilih Kategori...</option>
                                    <option value="SPAREPART">Spare Part</option>
                                    <option value="RnD">RnD Assets</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="qty">Quantity</label>
                                <input type="number" class="form-control" id="qty" name="qty" min="1" required>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="mb-4">
                                <label class="form-label" for="fotoFile">Foto Asset</label>
                                <input type="file" class="form-control" id="fotoFile" name="fotoFile" accept="image/*">
                                <div class="form-text text-muted">
                                    <i class="fa fa-info-circle me-1"></i>
                                    Format yang didukung: JPG, JPEG, PNG, GIF (Max: 5MB)
                                </div>
                                <div id="imagePreview" class="mt-2" style="display:none;">
                                    <img id="previewImg" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px;">
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-save"></i> Submit Asset In
                        </button>
                        <button type="reset" class="btn btn-secondary">
                            <i class="fa fa-refresh"></i> Reset
                        </button>
                    </div>
                </form>
            </div>

            <!-- Scan QR/Barcode Tab -->
            <div class="tab-pane fade" id="scan-input" role="tabpanel">
                <div class="row">
                    <!-- Scanner Section -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-camera me-1"></i> Scanner
                                </h5>
                            </div>
                            <div class="card-body">
                                <div id="qr-scanner-section">
                                    <div id="qr-reader" style="width: 100%; max-width: 400px; margin: 0 auto; display: none;"></div>
                                    
                                    <!-- Scanner Controls -->
                                    <div class="text-center">
                                        <div id="scanner-status" class="mb-3">
                                            <i class="fa fa-qrcode fa-3x text-muted mb-2 d-block"></i>
                                            <h6 class="text-muted">Klik tombol di bawah untuk memulai scan</h6>
                                        </div>
                                        
                                        <button type="button" class="btn btn-success me-2" id="startScanBtn">
                                            <i class="fa fa-camera me-1"></i> Mulai Scan
                                        </button>
                                        <button type="button" class="btn btn-danger" id="stopScanBtn" style="display:none;">
                                            <i class="fa fa-stop me-1"></i> Stop
                                        </button>
                                    </div>
                                    
                                    <!-- Scan Result Alert -->
                                    <div id="scan-result" class="alert alert-success mt-3" style="display:none;">
                                        <i class="fa fa-check-circle me-1"></i>
                                        <strong>Scan berhasil!</strong> Data telah diisi otomatis.
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Scanned Data Form -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-edit me-1"></i> Data Asset
                                </h5>
                            </div>
                            <div class="card-body">
                                <form id="scannedAssetForm" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_nomorAsset">Nomor Asset</label>
                                        <input type="text" class="form-control" id="scan_nomorAsset" name="nomorAsset" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_namaBarang">Nama Barang</label>
                                        <input type="text" class="form-control" id="scan_namaBarang" name="namaBarang" readonly>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_kodeBarang">Kode Barang</label>
                                        <input type="text" class="form-control" id="scan_kodeBarang" name="kodeBarang">
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_kategoriBarang">Kategori Barang</label>
                                        <select class="form-control" id="scan_kategoriBarang" name="kategoriBarang" required>
                                            <option value="">Pilih Kategori...</option>
                                            <option value="SPAREPART">Spare Part</option>
                                            <option value="RnD">RnD Assets</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_qty">Quantity <span class="text-danger">*</span></label>
                                        <input type="number" class="form-control" id="scan_qty" name="qty" min="1" required>
                                    </div>
                                    <div class="mb-3">
                                        <label class="form-label" for="scan_fotoFile">Foto Asset</label>
                                        <input type="file" class="form-control" id="scan_fotoFile" name="fotoFile" accept="image/*">
                                        <div class="form-text text-muted">
                                            <i class="fa fa-info-circle me-1"></i>
                                            Format yang didukung: JPG, JPEG, PNG, GIF (Max: 5MB)
                                        </div>
                                        <div id="scan_imagePreview" class="mt-2" style="display:none;">
                                            <img id="scan_previewImg" src="" alt="Preview" style="max-width: 200px; max-height: 200px; border: 1px solid #ddd; border-radius: 4px;">
                                        </div>
                                    </div>
                                    
                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary" disabled id="submitScannedBtn">
                                            <i class="fa fa-save me-1"></i> Submit Asset In
                                        </button>
                                        <div id="validationStatus" class="alert alert-warning mt-2" style="display:none;">
                                            <i class="fa fa-exclamation-triangle me-1"></i>
                                            <span id="validationMessage">Data sedang divalidasi...</span>
                                        </div>
                                        <button type="button" class="btn btn-secondary" id="resetScanBtn">
                                            <i class="fa fa-refresh me-1"></i> Reset & Scan Lagi
                                        </button>
                                    </div>
                                </form>
                                
                                <!-- Waiting Message -->
                                <div id="waiting-scan" class="text-center py-4">
                                    <i class="fa fa-qrcode fa-3x text-muted mb-3"></i>
                                    <h6 class="text-muted">Silakan scan QR Code atau Barcode</h6>
                                    <p class="text-muted small">Pastikan kode dalam posisi yang jelas dan terang</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Excel Import Tab -->
            <div class="tab-pane fade" id="excel-input" role="tabpanel">
                <div class="row">
                    <!-- Template Download Section -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-download me-1"></i> Download Template
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="text-muted">Download template Excel untuk memudahkan input data asset secara massal.</p>
                                <div class="alert alert-info">
                                    <i class="fa fa-info-circle me-1"></i>
                                    <strong>Format template:</strong><br>
                                    - Nama Barang<br>
                                    - Nomor Asset<br>
                                    - Kode Barang<br>
                                    - Kategori Barang<br>
                                    - Tanggal Masuk (format: dd/MM/yyyy, contoh: 12/10/2025)<br>
                                    - Qty
                                </div>
                                <a href="@Url.Action("DownloadTemplate", "Asset")" class="btn btn-success">
                                    <i class="fa fa-file-excel me-1"></i> Download Template Excel
                                </a>
                            </div>
                        </div>
                    </div>

                    <!-- Upload Excel Section -->
                    <div class="col-lg-6">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-upload me-1"></i> Upload Data Excel
                                </h5>
                            </div>
                            <div class="card-body">
                                <form id="excelUploadForm" method="post" action="@Url.Action("UploadExcel", "Asset")" enctype="multipart/form-data">
                                    <div class="mb-3">
                                        <label class="form-label" for="excelFile">Pilih File Excel</label>
                                        <input type="file" class="form-control" id="excelFile" name="file" accept=".xlsx,.xls" required>
                                        <div class="form-text">Format file yang didukung: .xlsx, .xls (Maksimal ukuran file: 10MB)</div>
                                    </div>
                                    
                                    <div class="alert alert-warning">
                                        <i class="fa fa-exclamation-triangle me-1"></i>
                                        <strong>Validasi yang akan dilakukan:</strong><br>
                                        - Qty tidak boleh kosong atau 0<br>
                                        - Kombinasi Kode Barang dan Nomor Asset harus unik<br>
                                        - Tanggal Masuk harus dalam format yang valid (dd/MM/yyyy)<br>
                                        - Semua field wajib diisi (kecuali Tanggal Masuk akan diisi otomatis jika kosong)
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-primary" id="uploadExcelBtn">
                                            <i class="fa fa-upload me-1"></i> Upload & Import Data
                                        </button>
                                    </div>
                                </form>

                                <!-- Progress indicator -->
                                <div id="uploadProgress" class="mt-3" style="display: none;">
                                    <div class="d-flex align-items-center">
                                        <div class="spinner-border spinner-border-sm me-2" role="status">
                                            <span class="visually-hidden">Loading...</span>
                                        </div>
                                        <span>Memproses file Excel...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Results Section -->
                <div class="row mt-4" id="uploadResults" style="display: none;">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-header">
                                <h5 class="card-title mb-0">
                                    <i class="fa fa-list me-1"></i> Hasil Import
                                </h5>
                            </div>
                            <div class="card-body">
                                <div id="importResultContent">
                                    <!-- Results will be displayed here -->
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/AssetIn.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <!-- QR/Barcode Scanner Library -->
    <script src="https://unpkg.com/html5-qrcode@2.3.8/html5-qrcode.min.js"></script>
}
